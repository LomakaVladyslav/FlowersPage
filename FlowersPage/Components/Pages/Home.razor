@page "/"

<PageTitle>Home</PageTitle>

<h1>Квіти Владислава</h1>

<div class="grid-container">
    @foreach (var flower in Flowers) 
    {
        <div class="card">
            <img src="@flower.ImageUrl" alt="@flower.Name" />
            <h2>@flower.Name</h2>
            <p>Ціна: @flower.Price грн</p>
        </div>
    }
</div>

