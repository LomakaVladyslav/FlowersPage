@inherits LayoutComponentBase

<HeadContent>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Онлайн-магазин квітів. Швидка доставка букетів для будь-якої події. Замовляйте квіти онлайн з комфортом!">
    <meta name="keywords" content="квіти, онлайн-магазин, доставка квітів, букети, подарунки, квіти на замовлення">
    <meta name="author" content="FlowerShop">
    <title>Онлайн-магазин квітів</title>
</HeadContent>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
